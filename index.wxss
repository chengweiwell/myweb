page {
  background: linear-gradient(135deg, #c41e3a 0%, #d4380d 50%, #cf1322 100%);
  min-height: 100vh;
}

.container {
  padding: 15px;
  position: relative;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.lantern {
  position: fixed;
  top: -30px;
  width: 60px;
  height: 80px;
  background: linear-gradient(180deg, #ff4d4f 0%, #cf1322 100%);
  border-radius: 30px 30px 50% 50%;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  animation: swing 3s ease-in-out infinite;
  z-index: 1;
}

.lantern::after {
  content: '';
  position: absolute;
  bottom: -20px;
  left: 50%;
  transform: translateX(-50%);
  width: 4px;
  height: 20px;
  background: #ffd700;
}

.lantern-left {
  left: 5%;
  animation-delay: 0s;
}

.lantern-right {
  right: 5%;
  animation-delay: 1.5s;
}

@keyframes swing {
  0%, 100% { transform: rotate(-5deg); }
  50% { transform: rotate(5deg); }
}

.game-container {
  background: linear-gradient(180deg, #fff7e6 0%, #fff 100%);
  border-radius: 30px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4), inset 0 0 30px rgba(255, 215, 0, 0.1);
  width: 100%;
  max-width: 1000px;
  padding: 30px;
  position: relative;
  z-index: 2;
  border: 3px solid #ffd700;
}

.header {
  text-align: center;
  margin-bottom: 30px;
  position: relative;
}

.title {
  font-size: 42px;
  color: #c41e3a;
  margin-bottom: 10px;
  text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
  font-weight: bold;
  letter-spacing: 2px;
  display: block;
}

.subtitle {
  font-size: 22px;
  color: #d4380d;
  font-weight: 500;
  display: block;
}

.menu-options {
  display: flex;
  flex-direction: row;
  gap: 25px;
  margin-top: 40px;
  flex-wrap: wrap;
}

.menu-card {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  border-radius: 25px;
  padding: 40px 30px;
  text-align: center;
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.3);
  position: relative;
  overflow: hidden;
  border: 3px solid #ffd700;
  flex: 1;
  min-width: 280px;
}

.menu-card .emoji {
  font-size: 100px;
  margin-bottom: 20px;
  display: block;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.card-title {
  color: white;
  font-size: 32px;
  margin-bottom: 15px;
  font-weight: bold;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  display: block;
}

.card-desc {
  color: rgba(255, 255, 255, 0.95);
  font-size: 18px;
  font-weight: 500;
  display: block;
}

.difficulty-selector {
  margin: 40px 0;
}

.selector-title {
  text-align: center;
  color: #c41e3a;
  margin-bottom: 25px;
  font-size: 26px;
  font-weight: bold;
  display: block;
}

.difficulty-buttons {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

.difficulty-btn {
  padding: 15px 35px;
  border: none;
  border-radius: 30px;
  font-size: 20px;
  font-weight: bold;
  background: linear-gradient(135deg, #ffd700 0%, #ffec3d 100%);
  color: #c41e3a;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  border: 2px solid #ffd700;
}

.difficulty-btn.active {
  background: linear-gradient(135deg, #c41e3a 0%, #cf1322 100%);
  color: #ffd700;
  box-shadow: 0 8px 25px rgba(196, 30, 58, 0.5);
}

.game-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25px;
  flex-wrap: wrap;
  gap: 15px;
}

.timer, .score {
  background: linear-gradient(135deg, #ffd700 0%, #ffec3d 100%);
  padding: 15px 30px;
  border-radius: 20px;
  font-size: 26px;
  font-weight: bold;
  color: #c41e3a;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  border: 2px solid #ffd700;
  min-width: 180px;
  text-align: center;
}

.timer.warning {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: #ffd700;
  animation: pulse 0.5s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.cooking-area {
  background: linear-gradient(180deg, #fff7e6 0%, #ffeaa7 100%);
  border-radius: 25px;
  padding: 30px;
  margin-bottom: 25px;
  min-height: 450px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 3px solid #ffd700;
  position: relative;
}

.cooking-station {
  display: flex;
  gap: 25px;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 30px;
  width: 100%;
}

.ingredient {
  width: 120px;
  height: 120px;
  background: white;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  position: relative;
  border: 3px solid #ffd700;
}

.ingredient .emoji {
  font-size: 60px;
  margin-bottom: 8px;
}

.ingredient .name {
  font-size: 16px;
  color: #636e72;
  font-weight: 600;
}

.ingredient .count {
  position: absolute;
  top: -10px;
  right: -10px;
  background: linear-gradient(135deg, #c41e3a 0%, #cf1322 100%);
  color: #ffd700;
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  font-weight: bold;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
  border: 2px solid #ffd700;
}

.cooking-pot {
  width: 250px;
  height: 250px;
  background: linear-gradient(180deg, #ffd700 0%, #ffec3d 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100px;
  position: relative;
  box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
  transition: all 0.3s;
  border: 5px solid #ffd700;
}

.cooking-pot.cooking {
  animation: cook 0.5s infinite;
}

@keyframes cook {
  0%, 100% { transform: scale(1) rotate(0deg); }
  25% { transform: scale(1.05) rotate(-3deg); }
  75% { transform: scale(1.05) rotate(3deg); }
}

.cooking-pot .steam {
  position: absolute;
  top: -40px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 40px;
  opacity: 0;
  animation: steam 1.5s infinite;
}

@keyframes steam {
  0% { opacity: 0; transform: translateX(-50%) translateY(0); }
  50% { opacity: 1; }
  100% { opacity: 0; transform: translateX(-50%) translateY(-30px); }
}

.progress-bar {
  width: 100%;
  height: 30px;
  background: #dfe6e9;
  border-radius: 15px;
  overflow: hidden;
  margin-top: 25px;
  border: 3px solid #ffd700;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #52c41a 0%, #73d13d 100%);
  border-radius: 15px;
  transition: width 0.5s;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 16px;
  font-weight: bold;
}

.action-buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
  margin-top: 25px;
  flex-wrap: wrap;
}

.action-btn {
  padding: 18px 40px;
  border: none;
  border-radius: 30px;
  font-size: 20px;
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 10px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  border: 3px solid transparent;
}

.cook-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  border-color: #52c41a;
}

.reset-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #cf1322 100%);
  color: white;
  border-color: #ff4d4f;
}

.back-btn {
  background: linear-gradient(135deg, #722ed1 0%, #9254de 100%);
  color: white;
  border-color: #722ed1;
}

.message-box {
  background: white;
  padding: 20px 30px;
  border-radius: 20px;
  margin-top: 25px;
  text-align: center;
  font-size: 24px;
  color: #2d3436;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  min-height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3px solid #ffd700;
  font-weight: 500;
}

.result-content {
  text-align: center;
}

.result-emoji {
  font-size: 120px;
  margin-bottom: 25px;
  display: block;
  animation: bounce 1s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

.result-title {
  font-size: 42px;
  color: #c41e3a;
  margin-bottom: 25px;
  font-weight: bold;
  text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
  display: block;
}

.result-stats {
  background: white;
  padding: 35px;
  border-radius: 25px;
  margin: 35px 0;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  border: 3px solid #ffd700;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  padding: 18px 0;
  border-bottom: 3px solid #f1f2f6;
  font-size: 20px;
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-label {
  color: #636e72;
  font-weight: 500;
}

.stat-value {
  font-weight: bold;
  color: #c41e3a;
}

.funny-comment {
  background: linear-gradient(135deg, #ffd700 0%, #ffec3d 100%);
  padding: 25px;
  border-radius: 20px;
  margin: 25px 0;
  font-size: 24px;
  color: #c41e3a;
  font-weight: bold;
  border: 3px solid #ffd700;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
}

.share-buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
  margin-top: 35px;
  flex-wrap: wrap;
}

.share-btn {
  padding: 15px 30px;
  border: none;
  border-radius: 30px;
  font-size: 18px;
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 10px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  border: 3px solid transparent;
}

.share-wechat {
  background: linear-gradient(135deg, #07c160 0%, #389e0d 100%);
  color: white;
  border-color: #07c160;
}

.share-copy {
  background: linear-gradient(135deg, #722ed1 0%, #9254de 100%);
  color: white;
  border-color: #722ed1;
}

.easter-egg {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: linear-gradient(135deg, #ffd700 0%, #ffec3d 100%);
  padding: 40px 60px;
  border-radius: 30px;
  font-size: 36px;
  color: #c41e3a;
  font-weight: bold;
  z-index: 2000;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  border: 5px solid #ffd700;
  animation: popIn 0.5s ease-out;
  display: none;
  text-align: center;
}

.easter-egg.show {
  display: block;
}

@keyframes popIn {
  0% {
    transform: translate(-50%, -50%) scale(0);
    opacity: 0;
  }
  100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 1;
  }
}

.welcome-modal, .tutorial-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3000;
  padding: 20px;
}

.modal-content {
  background: linear-gradient(180deg, #fff7e6 0%, #fff 100%);
  padding: 40px;
  border-radius: 30px;
  max-width: 600px;
  width: 100%;
  border: 5px solid #ffd700;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  text-align: center;
}

.modal-title {
  font-size: 36px;
  color: #c41e3a;
  margin-bottom: 20px;
  font-weight: bold;
  display: block;
}

.modal-text {
  font-size: 24px;
  color: #2d3436;
  margin-bottom: 30px;
  line-height: 1.6;
  display: block;
}

.modal-btn {
  padding: 18px 40px;
  border: none;
  border-radius: 30px;
  font-size: 22px;
  font-weight: bold;
  background: linear-gradient(135deg, #c41e3a 0%, #cf1322 100%);
  color: #ffd700;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
}

.multiplayer-section {
  background: white;
  padding: 30px;
  border-radius: 25px;
  margin: 30px 0;
  border: 3px solid #ffd700;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.section-title {
  text-align: center;
  color: #c41e3a;
  margin-bottom: 20px;
  font-size: 26px;
  font-weight: bold;
  display: block;
}

.room-input {
  width: 100%;
  padding: 15px 20px;
  border: 3px solid #ffd700;
  border-radius: 20px;
  font-size: 20px;
  margin-bottom: 15px;
  text-align: center;
  font-weight: bold;
  color: #c41e3a;
}

.room-buttons {
  display: flex;
  gap: 15px;
  justify-content: center;
  flex-wrap: wrap;
}

.room-btn {
  padding: 15px 30px;
  border: none;
  border-radius: 25px;
  font-size: 20px;
  font-weight: bold;
  flex: 1;
  min-width: 150px;
}

.create-room-btn {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
}

.join-room-btn {
  background: linear-gradient(135deg, #722ed1 0%, #9254de 100%);
  color: white;
}

.leaderboard {
  background: white;
  padding: 30px;
  border-radius: 25px;
  margin: 30px 0;
  border: 3px solid #ffd700;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
}

.leaderboard-item {
  display: flex;
  justify-content: space-between;
  padding: 15px 20px;
  margin-bottom: 10px;
  background: linear-gradient(135deg, #fff7e6 0%, #ffeaa7 100%);
  border-radius: 15px;
  font-size: 20px;
  font-weight: bold;
  color: #c41e3a;
  border: 2px solid #ffd700;
}

.leaderboard-item:first-child {
  background: linear-gradient(135deg, #ffd700 0%, #ffec3d 100%);
}